<div class="container-fluid pt-5">
    
    <div class="container p-2 mb-5 border-1 border-top border-bottom d-flex justify-content-evenly text-secondary">
        <%= link_to 'Todas', produtos_path, class: "nav-link fs-5 #{ativa_link(produtos_path)}" %>

        <% @categorias.each do |categoria| %>
            <%= link_to categoria.nome , produtos_path(categoria: categoria.id), class: "nav-link fs-5 #{ativa_link(produtos_path(categoria: categoria.id))}" %>
        <% end %>
    </div>

    <div class="row">
        <% @produtos.each do |produto| %>
            <div class="col-sm-6 col-md-4 col-lg-3 col-xl-3 d-flex justify-content-center p-3">
                <div class="card" style="min-width: 300px; height: 400px;">
                    <div class="d-flex justify-content-center">                        
                        <i class="<%= exibir_imagem(produto.categoria_id) %> fs-1 mt-5 mb-3"></i>
                    </div>
                    <div class="card-body text-center">
                        <h6 class="fs-6"><%= produto.nome %></h6>
                        <h6 class="fs-6"><%= produto.descricao %></h6>
                        <p>R$<span class="fs-6"><%= produto.preco_ajustado %></span></p>
                    </div>
                    <div class="card-footer text-center border-0" style="background-color: inherit;">
                        <ul class="list-unstyled">
                            <li><button class="btn btn-outline-light mb-2">Adicionar <i class="bi bi-cart-plus"></i></button></li>
                            <li class="mt-2"><span class="align-bottom">Qtd. dispon√≠vel: <%= produto.quantidade_em_estoque%></span></li>
                        </ul>
                    </div>
                </div>
            </div>
        <% end %>
    </div>
</div>